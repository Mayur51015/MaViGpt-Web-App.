rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own subcollections (conversations, etc.)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Shares collection - public read, owner-only write
    match /shares/{shareId} {
      // Anyone can read shared conversations
      allow read: if true;
      
      // Only authenticated users can create shares
      allow create: if request.auth != null && 
                       request.resource.data.ownerId == request.auth.uid;
      
      // Only owner can delete shares
      allow delete: if request.auth != null && 
                       resource.data.ownerId == request.auth.uid;
      
      // Allow update for view count increment
      allow update: if true;
    }
    
    // Invites collection
    match /invites/{inviteId} {
      // Users can read invites sent to their email
      allow read: if request.auth != null && 
                     request.auth.token.email == resource.data.email;
      
      // Authenticated users can create invites
      allow create: if request.auth != null;
      
      // Users can update invites sent to their email (accept/decline)
      allow update: if request.auth != null && 
                       request.auth.token.email == resource.data.email;
      
      // Only invite creator can delete
      allow delete: if request.auth != null && 
                       resource.data.invitedBy == request.auth.uid;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
